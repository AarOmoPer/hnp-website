<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>HNP - Home</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css">
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  <script defer src="https://use.fontawesome.com/releases/v5.0.0/js/all.js"></script>
  <style>
    body {
      font-family: Raleway;
    }
  </style>
</head>

<body>
  <section class="hero is-fullheight">
    <div class="hero-head">
      <header class="navbar is-white">
        <div class="container">
          <div class="navbar-brand">
            <a class="navbar-item">
              <!-- <img src="https://bulma.io/images/bulma-type-white.png" alt="Logo"> -->
              <h1 class='title is-size-6'>Harpurhey Neighbourhood Project</h1>
            </a>
            <span id='mobile-burger-button' class="navbar-burger burger" data-target="navbarMenuHeroC">
              <span></span>
              <span></span>
              <span></span>
            </span>
          </div>
          <div id="navbarMenuHeroC" class="navbar-menu">
            <div class="navbar-end">
              <a class="navbar-item is-active" href='/home'>
                Home
              </a>
              <div class="navbar-item has-dropdown is-hoverable">
                <a class="navbar-link" href="/services">
                  Services
                </a>
                <div class="navbar-dropdown is-boxed has-text-dark">
                  <a class="navbar-item" href="/services/what's_on">
                    What's on
                  </a>
                  <a class="navbar-item" href="/services/room_hire">
                    Room hire
                  </a>
                  <a class="navbar-item" href="/services/it_facilities">
                    IT facilities
                  </a>
                  <hr class="navbar-divider">
                  <a class="navbar-item" href="/services/advice_for_groups">
                    Advice for groups
                  </a>
                  <a class="navbar-item" href="/services/advice_and_information_for_local_people">
                    Advice and information for local people
                  </a>
                </div>
              </div>
              <div class="navbar-item has-dropdown is-hoverable">
                <a class="navbar-link" href="/projects">
                  Projects
                </a>
                <div class="navbar-dropdown is-boxed has-text-dark">
                  <a class="navbar-item" href="/projects/the_shaw_centre">
                    The Shaw Centre
                  </a>
                  <a class="navbar-item" href="/projects/emerging_futures">
                    Emerging Futures
                  </a>
                  <a class="navbar-item" href="/projects/north_manchester_community_partnership">
                    North Manchester Community Partnership
                  </a>
                  <a class="navbar-item" href="/projects/work_club">
                    Work Club
                  </a>
                </div>
              </div>
              <a class="navbar-item" href='/timetable'>
                Centre Timetable
              </a>
              <span class="navbar-item">
                <a class="button is-primary" href='/contact'>
                  <span class="icon">
                    <i class="fas fa-phone"></i>
                  </span>
                  <span>Contact Us</span>
                </a>
              </span>
            </div>
          </div>
        </div>
      </header>
    </div>

    <div class="hero-body">
        <!-- <%%> -->
        <% if (sender === 'projects') {%>
            <div class="container">
                    <% projects.map((group, i) => {%>
                        <section class="columns">
                            <section class="column">
                                <a class="" href=<%= group[0].link%>>
                                  <section class="card">
                                    <div class="card-image">
                                        <figure class="image is-4by3">
                                        <img src="<%= group[0].img%>" alt="Placeholder image">
                                        </figure>
                                    </div>
                                    <div class="card-content">
                                        <section class="subtitle"><%= group[0].title%></section>
                                    </div>
                                  </section>
                                </a>
                            </section>
                            <section class="column">
                                <% if (group.length > 1) {%>
                                    <a class="" href=<%= group[1].link%>>
                                      <section class="card">
                                        <div class="card-image">
                                            <figure class="image is-4by3">
                                            <img src="<%= group[1].img%>" alt="Placeholder image">
                                            </figure>
                                        </div>
                                        <div class="card-content">
                                            <section class="subtitle"><%= group[1].title%></section>
                                        </div>
                                      </section>
                                    </a> 
                                <% }%>
                            </section>
                            <section class="column">
                                <% if (group.length > 2) {%>
                                    <a class="" href=<%= group[2].link%>>
                                      <section class='card'>
                                        <div class="card-image">
                                            <figure class="image is-4by3">
                                            <img src="<%= group[2].img%>" alt="Placeholder image">
                                            </figure>
                                        </div>
                                        <div class="card-content">
                                            <section class="subtitle"><%= group[2].title%></section>
                                        </div>
                                      </section>
                                    </a> 
                                <% }%>
                            </section>
                        </section>
                    <% }) %>
            </div>
        <% }%>
    </div>

    <div class="hero-foot">
      <nav class="tabs is-boxed is-fullwidth">
        <div class="container">
          <ul>
            <li>
              <a href="https://www.facebook.com/harpurhey/">
                <i class="fab fa-facebook is-size-4"></i>
              </a>
            </li>
            <li>
              <a >
                <i class="fab fa-instagram is-size-4"></i>
              </a>
            </li>
            <li>
              <a href="https://twitter.com/HnpHarpurhey">
                <i class="fab fa-twitter is-size-4"></i>
              </a>
            </li>
            <li>
              <a >
                <i class="fab fa-snapchat is-size-4"></i>
              </a>
            </li>
        </div>
      </nav>
    </div>
  </section>

  <script>
    const burgerButton = document.getElementById('mobile-burger-button');
    const navbar = document.getElementById('navbarMenuHeroC');

    burgerButton.onclick = function () {
      const burgerClass = burgerButton
        .className
        .split(' ');
      if (burgerClass.includes('is-active')) {
        burgerButton.className = burgerClass.filter(val => val !== 'is-active').join(' ')
        navbar.className = navbar.className.split(' ').filter(val => val !== 'is-active').join(' ')
      }
      else {
        burgerButton.className = `${burgerClass.join(' ')} is-active`
        navbar.className = `${navbar.className} is-active`
      }
    }
  </script>
</body>

</html>